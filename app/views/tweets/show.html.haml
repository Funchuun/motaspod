.header
  = render partial: "render/header"

.tweet
  = image_tag @tweet.image.to_s, class: "tweet__details"
  .tweet__details
    車名
    = @tweet.carname
  .tweet__details
    製造年
    = @tweet.year
  .tweet__details
    説明
    = @tweet.description
  .tweet__details
    = @tweet.user.name
    さんの投稿
  .tweet__details
    超カッコいい
    = @tweet.likes.where(rate: "Supercool").count
  .tweet__details
    カッコいい
    = @tweet.likes.where(rate: "Cool").count
  .tweet__details
    ブサイク
    = @tweet.likes.where(rate: "Uncool").count
  .tweet__owner
    - if current_user.id == @tweet.user_id
      .tweet__owner--menu
        = link_to edit_tweet_path, method: :get, class: "tweet__owner--menu.button" do
          編集
      .tweet__owner--menu
        = link_to tweet_path, method: :delete, class: "tweet__owner--menu.button" do
          削除
  .tweet__evaluation
    - if current_user.already_liked?(@tweet)
      = button_to "取り消す", tweet_like_path(@tweet), method: :delete
    - else
      = button_to "超カッコいい", tweet_likes_path(@tweet), {method: :post, params: {rate: 'Supercool'}}
      = button_to "カッコいい", tweet_likes_path(@tweet), {method: :post, params: {rate: 'Cool'}}
      = button_to "ブサイク", tweet_likes_path(@tweet), {method: :post, params: {rate: 'Uncool'}}